mixin newsElem(href, btn, headline, text, date, image = null, className)
  if image
    div(class=`news-elem ${className}`, style=`background-image: url('../../images/news/${image}'); background-repeat: no-repeat;`)
      .news-elem-wrap-href
        a(href= href).news-elem__href= btn
      h3.news-elem__headline!= headline
      if className !== 'news-elem-big'
        p.news-elem__text!= text
        p.news-elem__date= date
  else
    div(class=`${className}`).news-elem
      .news-elem-wrap-href
        a(href= href).news-elem__href= btn
      h3.news-elem__headline!= headline
      if className !== 'news-elem-big'
        p.news-elem__text!= text
        p.news-elem__date= date
