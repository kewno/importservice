mixin headerContacts(back, info)
  header.header-service
    .header__burger.header__burger_none
      +popUpMenuHeader(menu)
    .header__wrap-menu
      .container__2920
        +mainMenu(menu, 'main-menu_parthers', 'main-menu_black', 'logo-black.png')

    .header-service-slider
      .swiper-wrapper
        .swiper-slide
          img(src=`../../images/header/${back}`).swiper-slide__img
        .swiper-slide
          img(src=`../../images/header/${back}`).swiper-slide__img
      +contactsHeaderInfo(info)
      .wrap-service-control
        .service-pagination

        .service-control
          .service-control_prev
            +arrow('arrow_white')
          .service-control_next
            +arrow('arrow_red arrow_right')
